Default = Debug

General {
	CompilerFlags		= -Wall -Wextra -pipe -mfpmath=sse,387 -msse2

	CFlags				= $CompilerFlags$ -c -std=c11 -DZ_PREFIX

	IgnoredFiles		= .Built* *.h *.mcfproj

	Compilers {
		S {
			CommandLine	= gcc -x assembler -c $CompilerFlags$ %IN% -o %OUT%
		}
		c {
			CommandLine	= gcc -x c $CFlags$ %IN% -o %OUT%
			Dependency	= gcc -x c $CFlags$ %IN% -MM
		}
	}

	Linkers {
		Partial			= ld -r %IN% -o %OUT%
		Full			= ar rcs %OUT% %IN%
	}

	DefaultOutput		= libz.a
}

Debug = General {
	CompilerFlags		=> -fno-builtin -g -O0
}

Release = General {
	CompilerFlags		=> -DNDEBUG -O3 -ffunction-sections -fdata-sections
}
