Default = Debug

General {
	CompilerFlags		= -Wall -Wextra -pedantic -pedantic-errors -pipe -mfpmath=both -march=nocona -mno-stack-arg-probe -mno-accumulate-outgoing-args -mpush-args

	CFlags				= -std=c11

	IgnoredFiles		= .Built* *.h *.mcfproj

	Compilers {
		c {
			CommandLine	= gcc -x c -c $CompilerFlags$ $CFlags$ %IN% -o %OUT%
			Dependency	= gcc -x c -c $CompilerFlags$ $CFlags$ %IN% -MM
		}
	}

	Linkers {
		Partial			= ld -r %IN% -o %OUT%
		Full			= gcc-ar rcs %OUT% %IN%
	}

	DefaultOutput		= liblzmalite.a
}

Debug = General {
	CompilerFlags		=> -fno-builtin -g -O0
}

Release = General {
	CompilerFlags		=> -DNDEBUG -O3 -flto -ffunction-sections -fdata-sections
}
