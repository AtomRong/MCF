Default = Debug

General {
	CompilerFlags		= -Wall -Wextra -pipe -mfpmath=sse,387 -msse2 -D_7ZIP_ST -D_LZMA_PROB32

	CFlags				= $CompilerFlags$ -c -std=c11

	IgnoredFiles		= .Built* *.h *.mcfproj *.txt

	Compilers {
		c {
			CommandLine	= gcc -x c $CFlags$ %IN% -o %OUT%
			Dependency	= gcc -x c $CFlags$ %IN% -MM
		}
	}

	Linkers {
		Partial			= ld -r %IN% -o %OUT%
		Full			= ar rcs %OUT% %IN%
	}

	DefaultOutput		= liblzma.a
}

Debug = General {
	CompilerFlags		=> -fno-builtin -g -O0
}

Release = General {
	CompilerFlags		=> -DNDEBUG -O3 -ffunction-sections -fdata-sections
}
